@model IEnumerable<CumlativePart1.Models.Teacher>

<div class="teacher-search-container">
    <h1>Teacher Search</h1>
    <form method="GET" action="/TeacherPage/List" class="search-form">
        <div class="form-group">
            <label for="start-date">Start Date:</label>
            <input type="date" id="start-date" name="StartDate" class="form-input" />
        </div>

        <div class="form-group">
            <label for="end-date">End Date:</label>
            <input type="date" id="end-date" name="EndDate" class="form-input" />
        </div>

        <button type="submit" class="search-button">Search</button>
    </form>

    <h2>Teachers List</h2>
    <div class="teacher-list">
        @foreach (var teacher in Model)
        {
            <div class="teacher-card">
                <h3>@teacher.TeacherFName @teacher.TeacherLName</h3>
                <a href="/TeacherPage/Show/@teacher.TeacherId" class="view-profile">View Profile</a>    
            </div>
        }
        <a style="margin-bottom:10px;" href="/TeacherPage/New">Add Teacher</a>

    </div>
</div>

<style>
    body {
        font-family: 'Arial', sans-serif;
        margin: 0;
        padding: 0;
        background-color: #e9ecef;
    }

    .teacher-search-container {
        max-width: 900px;
        margin: 40px auto;
        background-color: #fff;
        border-radius: 8px;
        padding: 40px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    }

    h1 {
        font-size: 36px;
        color: #4a4a4a;
        text-align: center;
        margin-bottom: 30px;
    }

    h2 {
        font-size: 26px;
        color: #495057;
        margin-bottom: 30px;
        text-align: center;
    }

    .search-form {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 20px;
        margin-bottom: 30px;
    }

    .form-group {
        display: flex;
        flex-direction: column;
        gap: 8px;
        width: 100%;
        max-width: 350px;
    }

    .form-input {
        padding: 12px;
        font-size: 16px;
        border-radius: 6px;
        border: 1px solid #ced4da;
        width: 100%;
    }

    .search-button {
        padding: 12px 30px;
        background-color: #28a745;
        color: #fff;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        transition: background-color 0.3s;
        width: 100%;
        max-width: 200px;
        font-size: 16px;
    }

        .search-button:hover {
            background-color: #218838;
        }

    .teacher-list {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 30px;
        margin-top: 20px;
    }

    .teacher-card {
        background-color: #f8f9fa;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s;
    }

        .teacher-card:hover {
            transform: translateY(-5px);
        }

        .teacher-card h3 {
            font-size: 22px;
            color: #343a40;
            margin-bottom: 15px;
        }

    .view-profile {
        color: #007bff;
        font-weight: 500;
        text-decoration: none;
        transition: color 0.3s;
    }

        .view-profile:hover {
            color: #0056b3;
            text-decoration: underline;
        }
</style>

